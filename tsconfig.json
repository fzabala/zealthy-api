{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "lib": ["es2015", "es6", "DOM"],
  "include": ["src"],
  "exclude": ["node_modules"]
}
